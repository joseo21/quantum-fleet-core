{"ast":null,"code":"import SvgIcon from '@/components/icons/SvgIcon.vue';\nexport default {\n  name: 'ModalAgregar',\n  components: {\n    SvgIcon\n  },\n  props: {\n    showAddModal: {\n      type: Boolean,\n      required: true\n    }\n  },\n  data() {\n    return {\n      step: 1,\n      templates: [{\n        id: 1,\n        name: 'Cambio de Aceite',\n        type: 'Preventiva',\n        description: 'Incluye filtro y revisión general',\n        used: false\n      }, {\n        id: 2,\n        name: 'Revisión de Frenos',\n        type: 'Preventiva',\n        description: 'Pastillas y discos',\n        used: false\n      }, {\n        id: 3,\n        name: 'Cambio de Neumáticos',\n        type: 'Correctiva',\n        description: 'Rotación y balanceo',\n        used: true\n      }, {\n        id: 4,\n        name: 'Chequeo de Batería',\n        type: 'Preventiva',\n        description: 'Carga y limpieza',\n        used: false\n      }, {\n        id: 5,\n        name: 'Alineación',\n        type: 'Preventiva',\n        description: 'Optimiza el desgaste',\n        used: false\n      }],\n      selectedTemplate: null,\n      maintenance: {\n        name: '',\n        type: '',\n        date: '',\n        km: '',\n        details: ''\n      },\n      isModalButtonDisabled: false\n    };\n  },\n  methods: {\n    selectTemplate(template) {\n      if (template.used) return;\n      this.selectedTemplate = template;\n      this.maintenance.name = template.name;\n      this.maintenance.type = template.type;\n    },\n    goToNextStep() {\n      if (this.selectedTemplate) this.step = 2;\n    },\n    saveMaintenance() {\n      // Aquí podrías emitir el evento al padre con los datos\n      this.selectedTemplate.used = true;\n      this.$emit('save', this.maintenance);\n      this.cancel();\n    },\n    cancel() {\n      this.$emit('close');\n      this.step = 1;\n      this.selectedTemplate = null;\n      this.maintenance = {\n        name: '',\n        type: '',\n        date: '',\n        km: '',\n        details: ''\n      };\n    }\n  }\n};","map":{"version":3,"names":["SvgIcon","name","components","props","showAddModal","type","Boolean","required","data","step","templates","id","description","used","selectedTemplate","maintenance","date","km","details","isModalButtonDisabled","methods","selectTemplate","template","goToNextStep","saveMaintenance","$emit","cancel"],"sources":["/home/sebastian/quantum-fleet-core/frontend/src/components/MantencionesUi/ModalAgregar.vue"],"sourcesContent":["<template>\n  <!-- Modal multi-paso -->\n  <div\n    v-if=\"showAddModal\"\n    class=\"fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4\"\n  >\n    <div\n      class=\"bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 rounded-lg relative flex flex-col w-full max-w-3xl h-auto p-6 border border-gray-300 dark:border-gray-700 shadow-xl\"\n    >\n      <!-- Botón volver paso 2 -> 1 -->\n      <button\n        v-if=\"step === 2\"\n        @click=\"step = 1\"\n        class=\"absolute top-4 left-4 p-2 rounded hover:bg-gray-200 dark:hover:bg-gray-700 transition\"\n        title=\"Volver\"\n      >\n        <SvgIcon name=\"arrow-left\" class=\"w-6 h-6\" />\n      </button>\n\n      <h2\n        class=\"text-2xl font-bold mb-4 text-center text-[#102372] dark:text-[#ff6600]\"\n      >\n        {{ step === 1 ? \"Seleccionar Template\" : \"Agregar Mantención\" }}\n      </h2>\n\n      <span class=\"h-px bg-gray-300 dark:bg-gray-700 mb-4\"></span>\n\n      <!-- Paso 1: Seleccionar Template -->\n      <div v-if=\"step === 1\" class=\"flex flex-col items-center gap-4 py-4\">\n        <!-- Fila superior -->\n        <div class=\"flex justify-center gap-4 flex-wrap\">\n          <div\n            v-for=\"template in templates\"\n            :key=\"template.id\"\n            @click=\"selectTemplate(template)\"\n            :class=\"[\n              'relative p-6 w-48 rounded-lg border cursor-pointer text-center transition-all',\n              template.used\n                ? 'border-gray-500 bg-gray-200 dark:bg-gray-800 opacity-60 cursor-not-allowed'\n                : selectedTemplate?.id === template.id\n                ? 'border-[#ff6600] bg-orange-50 dark:bg-[#ff6600]/20 dark:border-[#ff6600]'\n                : 'border-gray-300 dark:border-gray-600 hover:bg-gray-100 dark:hover:bg-gray-800'\n            ]\"\n          >\n            <h3 class=\"text-lg font-semibold mb-2\">{{ template.name }}</h3>\n            <p class=\"text-gray-600 dark:text-gray-300 text-sm mb-2\">\n              {{ template.description }}\n            </p>\n\n            <!-- Etiqueta de bloqueo -->\n            <div\n              v-if=\"template.used\"\n              class=\"absolute inset-0 flex items-center justify-center bg-black bg-opacity-50 text-white rounded-lg text-sm font-semibold\"\n            >\n              Este vehículo ya tiene este tipo de mantención\n            </div>\n          </div>\n        </div>\n      </div>\n\n<form\n  v-else\n  @submit.prevent=\"saveMaintenance\"\n  class=\"grid grid-cols-2 gap-4 py-2 overflow-y-auto\"\n>\n  <div>\n    <label class=\"block text-sm mb-1\">Nombre de la Mantención</label>\n    <input\n      type=\"text\"\n      class=\"w-full p-2 rounded-md bg-gray-100 dark:bg-gray-800 text-gray-900 dark:text-white border border-gray-300 dark:border-gray-600\"\n      v-model=\"maintenance.name\"\n      disabled\n    />\n  </div>\n\n  <div>\n    <label class=\"block text-sm mb-1\">Tipo de Mantención</label>\n    <select\n      class=\"w-full p-2 rounded-md bg-gray-100 dark:bg-gray-800 text-gray-900 dark:text-white border border-gray-300 dark:border-gray-600\"\n      v-model=\"maintenance.type\"\n      disabled\n    >\n      <option>{{ maintenance.type }}</option>\n    </select>\n  </div>\n\n  <div>\n    <label class=\"block text-sm mb-1\">Intervalo</label>\n    <input\n      type=\"text\"\n      placeholder=\"Ej: 30 días o 5000 km\"\n      class=\"w-full p-2 rounded-md bg-gray-100 dark:bg-gray-800 text-gray-900 dark:text-white border border-gray-300 dark:border-gray-600\"\n      v-model=\"maintenance.intervalo\"\n    />\n  </div>\n\n  <div>\n    <label class=\"block text-sm mb-1\">Email de contacto</label>\n    <input\n      type=\"email\"\n      placeholder=\"Ej: contacto@empresa.cl\"\n      class=\"w-full p-2 rounded-md bg-gray-100 dark:bg-gray-800 text-gray-900 dark:text-white border border-gray-300 dark:border-gray-600\"\n      v-model=\"maintenance.email\"\n    />\n  </div>\n\n  <div>\n    <label class=\"block text-sm mb-1\">Alerta</label>\n    <input\n      type=\"text\"\n      placeholder=\"Ej: 5 días antes o 200 km antes\"\n      class=\"w-full p-2 rounded-md bg-gray-100 dark:bg-gray-800 text-gray-900 dark:text-white border border-gray-300 dark:border-gray-600\"\n      v-model=\"maintenance.alerta\"\n    />\n  </div>\n\n  <div>\n    <label class=\"block text-sm mb-1\">Fecha Última Mantención</label>\n    <input\n      type=\"date\"\n      class=\"w-full p-2 rounded-md bg-gray-100 dark:bg-gray-800 text-gray-900 dark:text-white border border-gray-300 dark:border-gray-600\"\n      v-model=\"maintenance.fechaUltima\"\n    />\n  </div>\n</form>\n\n\n      <!-- Botones del modal -->\n      <div class=\"flex justify-between mt-6 gap-2\">\n        <button\n          @click=\"cancel\"\n          class=\"bg-gray-300 dark:bg-gray-700 hover:bg-gray-400 dark:hover:bg-gray-600 text-gray-900 dark:text-white px-4 py-2 rounded w-[48%] transition\"\n        >\n          Cancelar\n        </button>\n\n        <button\n          v-if=\"step === 1\"\n          @click=\"goToNextStep\"\n          :disabled=\"!selectedTemplate\"\n          :class=\"[\n            'px-4 py-2 rounded w-[48%] font-semibold transition',\n            selectedTemplate\n              ? 'bg-[#ff6600] hover:bg-[#e65500] text-white'\n              : 'bg-[#ff6600] opacity-50 cursor-not-allowed text-white'\n          ]\"\n        >\n          Siguiente\n        </button>\n\n        <button\n          v-else\n          type=\"submit\"\n          :disabled=\"isModalButtonDisabled\"\n          :class=\"[\n            'px-4 py-2 rounded w-[48%] font-semibold transition',\n            isModalButtonDisabled\n              ? 'bg-[#102372] opacity-50 cursor-not-allowed text-white'\n              : 'bg-[#102372] hover:bg-[#0d1c5a] text-white'\n          ]\"\n        >\n          Guardar\n        </button>\n      </div>\n    </div>\n  </div>\n</template>\n\n<script>\nimport SvgIcon from '@/components/icons/SvgIcon.vue'\n\nexport default {\n  name: 'ModalAgregar',\n  components: { SvgIcon },\n  props: {\n    showAddModal: { type: Boolean, required: true },\n  },\n  data() {\n    return {\n      step: 1,\n      templates: [\n        { id: 1, name: 'Cambio de Aceite', type: 'Preventiva', description: 'Incluye filtro y revisión general', used: false },\n        { id: 2, name: 'Revisión de Frenos', type: 'Preventiva', description: 'Pastillas y discos', used: false },\n        { id: 3, name: 'Cambio de Neumáticos', type: 'Correctiva', description: 'Rotación y balanceo', used: true },\n        { id: 4, name: 'Chequeo de Batería', type: 'Preventiva', description: 'Carga y limpieza', used: false },\n        { id: 5, name: 'Alineación', type: 'Preventiva', description: 'Optimiza el desgaste', used: false },\n      ],\n      selectedTemplate: null,\n      maintenance: { name: '', type: '', date: '', km: '', details: '' },\n      isModalButtonDisabled: false,\n    }\n  },\n  methods: {\n    selectTemplate(template) {\n      if (template.used) return\n      this.selectedTemplate = template\n      this.maintenance.name = template.name\n      this.maintenance.type = template.type\n    },\n    goToNextStep() {\n      if (this.selectedTemplate) this.step = 2\n    },\n    saveMaintenance() {\n      // Aquí podrías emitir el evento al padre con los datos\n      this.selectedTemplate.used = true\n      this.$emit('save', this.maintenance)\n      this.cancel()\n    },\n    cancel() {\n      this.$emit('close')\n      this.step = 1\n      this.selectedTemplate = null\n      this.maintenance = { name: '', type: '', date: '', km: '', details: '' }\n    },\n  },\n}\n</script>\n\n<style scoped>\nbutton {\n  transition: all 0.2s ease-in-out;\n}\ninput::placeholder,\ntextarea::placeholder {\n  color: #9ca3af;\n}\n</style>\n"],"mappings":"AAyKA,OAAOA,OAAM,MAAO,gCAA+B;AAEnD,eAAe;EACbC,IAAI,EAAE,cAAc;EACpBC,UAAU,EAAE;IAAEF;EAAQ,CAAC;EACvBG,KAAK,EAAE;IACLC,YAAY,EAAE;MAAEC,IAAI,EAAEC,OAAO;MAAEC,QAAQ,EAAE;IAAK;EAChD,CAAC;EACDC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,IAAI,EAAE,CAAC;MACPC,SAAS,EAAE,CACT;QAAEC,EAAE,EAAE,CAAC;QAAEV,IAAI,EAAE,kBAAkB;QAAEI,IAAI,EAAE,YAAY;QAAEO,WAAW,EAAE,mCAAmC;QAAEC,IAAI,EAAE;MAAM,CAAC,EACtH;QAAEF,EAAE,EAAE,CAAC;QAAEV,IAAI,EAAE,oBAAoB;QAAEI,IAAI,EAAE,YAAY;QAAEO,WAAW,EAAE,oBAAoB;QAAEC,IAAI,EAAE;MAAM,CAAC,EACzG;QAAEF,EAAE,EAAE,CAAC;QAAEV,IAAI,EAAE,sBAAsB;QAAEI,IAAI,EAAE,YAAY;QAAEO,WAAW,EAAE,qBAAqB;QAAEC,IAAI,EAAE;MAAK,CAAC,EAC3G;QAAEF,EAAE,EAAE,CAAC;QAAEV,IAAI,EAAE,oBAAoB;QAAEI,IAAI,EAAE,YAAY;QAAEO,WAAW,EAAE,kBAAkB;QAAEC,IAAI,EAAE;MAAM,CAAC,EACvG;QAAEF,EAAE,EAAE,CAAC;QAAEV,IAAI,EAAE,YAAY;QAAEI,IAAI,EAAE,YAAY;QAAEO,WAAW,EAAE,sBAAsB;QAAEC,IAAI,EAAE;MAAM,CAAC,CACpG;MACDC,gBAAgB,EAAE,IAAI;MACtBC,WAAW,EAAE;QAAEd,IAAI,EAAE,EAAE;QAAEI,IAAI,EAAE,EAAE;QAAEW,IAAI,EAAE,EAAE;QAAEC,EAAE,EAAE,EAAE;QAAEC,OAAO,EAAE;MAAG,CAAC;MAClEC,qBAAqB,EAAE;IACzB;EACF,CAAC;EACDC,OAAO,EAAE;IACPC,cAAcA,CAACC,QAAQ,EAAE;MACvB,IAAIA,QAAQ,CAACT,IAAI,EAAE;MACnB,IAAI,CAACC,gBAAe,GAAIQ,QAAO;MAC/B,IAAI,CAACP,WAAW,CAACd,IAAG,GAAIqB,QAAQ,CAACrB,IAAG;MACpC,IAAI,CAACc,WAAW,CAACV,IAAG,GAAIiB,QAAQ,CAACjB,IAAG;IACtC,CAAC;IACDkB,YAAYA,CAAA,EAAG;MACb,IAAI,IAAI,CAACT,gBAAgB,EAAE,IAAI,CAACL,IAAG,GAAI;IACzC,CAAC;IACDe,eAAeA,CAAA,EAAG;MAChB;MACA,IAAI,CAACV,gBAAgB,CAACD,IAAG,GAAI,IAAG;MAChC,IAAI,CAACY,KAAK,CAAC,MAAM,EAAE,IAAI,CAACV,WAAW;MACnC,IAAI,CAACW,MAAM,CAAC;IACd,CAAC;IACDA,MAAMA,CAAA,EAAG;MACP,IAAI,CAACD,KAAK,CAAC,OAAO;MAClB,IAAI,CAAChB,IAAG,GAAI;MACZ,IAAI,CAACK,gBAAe,GAA