{"ast":null,"code":"import \"core-js/modules/es.iterator.constructor.js\";\nimport \"core-js/modules/es.iterator.find.js\";\nimport SvgIcon from '@/components/icons/SvgIcon.vue';\nimport { ref, computed } from 'vue';\nexport default {\n  name: 'ModalAgregar',\n  components: {\n    SvgIcon\n  },\n  props: {\n    showAddModal: {\n      type: Boolean,\n      required: true\n    },\n    selectedPatente: {\n      type: String,\n      required: true\n    },\n    // la patente seleccionada\n    mantenciones: {\n      type: Array,\n      required: true\n    } // array de vehículos con odómetro\n  },\n  data() {\n    return {\n      step: 1,\n      templates: [{\n        id: 1,\n        name: 'Revisión Tecnica',\n        type: 'Por Tiempo',\n        description: 'Verificación completa del vehículo según normativa',\n        used: false\n      }, {\n        id: 2,\n        name: 'Permiso de Circulación',\n        type: 'Por Tiempo',\n        description: 'Gestión y pago del permiso de circulación anual',\n        used: false\n      }, {\n        id: 3,\n        name: 'Cambio de Neumáticos',\n        type: 'Por Odómetro',\n        description: 'Rotación, balanceo y revisión del desgaste de neumáticos',\n        used: false\n      }, {\n        id: 4,\n        name: 'Cambio de Aceite',\n        type: 'Por Odómetro',\n        description: 'Sustitución de aceite y filtro para mantener motor óptimo',\n        used: false\n      }, {\n        id: 5,\n        name: 'Cambio de Filtro de Aire',\n        type: 'Por Odómetro',\n        description: 'Reemplazo del filtro de aire para mejorar eficiencia del motor',\n        used: false\n      }],\n      selectedTemplate: null,\n      maintenance: {\n        name: '',\n        type: '',\n        date: '',\n        km: '',\n        details: '',\n        intervalo: '',\n        email: '',\n        alerta: '',\n        fechaUltima: ''\n      },\n      isModalButtonDisabled: false\n    };\n  },\n  computed: {\n    // Label dinámico\n    ultimoCampoLabel() {\n      if (!this.selectedTemplate) return '';\n      return this.selectedTemplate.type === 'Por Odómetro' ? 'Último Kilometraje' : 'Fecha Última Mantención';\n    },\n    // Valor dinámico\n    ultimoCampoValue: {\n      get() {\n        if (!this.selectedTemplate) return '';\n        if (this.selectedTemplate.type === 'Por Odómetro') {\n          // Buscar odómetro de la patente seleccionada\n          const vehiculo = this.mantenciones.find(v => v.patente === this.selectedPatente);\n          return this.maintenance.km || (vehiculo ? vehiculo.odometro : '');\n        } else {\n          return this.maintenance.fechaUltima;\n        }\n      },\n      set(value) {\n        if (!this.selectedTemplate) return;\n        if (this.selectedTemplate.type === 'Por Odómetro') {\n          this.maintenance.km = value;\n        } else {\n          this.maintenance.fechaUltima = value;\n        }\n      }\n    }\n  },\n  methods: {\n    selectTemplate(template) {\n      if (template.used) return;\n      this.selectedTemplate = template;\n      this.maintenance.name = template.name;\n      this.maintenance.type = template.type;\n    },\n    goToNextStep() {\n      if (this.selectedTemplate) this.step = 2;\n    },\n    saveMaintenance() {\n      this.selectedTemplate.used = true;\n      this.$emit('save', this.maintenance);\n      this.cancel();\n    },\n    cancel() {\n      this.$emit('close');\n      this.step = 1;\n      this.selectedTemplate = null;\n      this.maintenance = {\n        name: '',\n        type: '',\n        date: '',\n        km: '',\n        details: '',\n        intervalo: '',\n        email: '',\n        alerta: '',\n        fechaUltima: ''\n      };\n    }\n  }\n};","map":{"version":3,"names":["SvgIcon","ref","computed","name","components","props","showAddModal","type","Boolean","required","selectedPatente","String","mantenciones","Array","data","step","templates","id","description","used","selectedTemplate","maintenance","date","km","details","intervalo","email","alerta","fechaUltima","isModalButtonDisabled","ultimoCampoLabel","ultimoCampoValue","get","vehiculo","find","v","patente","odometro","set","value","methods","selectTemplate","template","goToNextStep","saveMaintenance","$emit","cancel"],"sources":["/home/sebastian/quantum-fleet-core/frontend/src/components/MantencionesUi/ModalAgregar.vue"],"sourcesContent":["<script>\nimport SvgIcon from '@/components/icons/SvgIcon.vue'\nimport { ref, computed } from 'vue'\n\nexport default {\n  name: 'ModalAgregar',\n  components: { SvgIcon },\n  props: {\n    showAddModal: { type: Boolean, required: true },\n    selectedPatente: { type: String, required: true }, // la patente seleccionada\n    mantenciones: { type: Array, required: true }, // array de vehículos con odómetro\n  },\n  data() {\n    return {\n      step: 1,\n      templates: [\n        { id: 1, name: 'Revisión Tecnica', type: 'Por Tiempo', description: 'Verificación completa del vehículo según normativa', used: false },\n        { id: 2, name: 'Permiso de Circulación', type: 'Por Tiempo', description: 'Gestión y pago del permiso de circulación anual', used: false },\n        { id: 3, name: 'Cambio de Neumáticos', type: 'Por Odómetro', description: 'Rotación, balanceo y revisión del desgaste de neumáticos', used: false },\n        { id: 4, name: 'Cambio de Aceite', type: 'Por Odómetro', description: 'Sustitución de aceite y filtro para mantener motor óptimo', used: false },\n        { id: 5, name: 'Cambio de Filtro de Aire', type: 'Por Odómetro', description: 'Reemplazo del filtro de aire para mejorar eficiencia del motor', used: false },\n      ],\n      selectedTemplate: null,\n      maintenance: {\n        name: '',\n        type: '',\n        date: '',\n        km: '',\n        details: '',\n        intervalo: '',\n        email: '',\n        alerta: '',\n        fechaUltima: ''\n      },\n      isModalButtonDisabled: false,\n    }\n  },\n  computed: {\n    // Label dinámico\n    ultimoCampoLabel() {\n      if (!this.selectedTemplate) return ''\n      return this.selectedTemplate.type === 'Por Odómetro' ? 'Último Kilometraje' : 'Fecha Última Mantención'\n    },\n    // Valor dinámico\n    ultimoCampoValue: {\n      get() {\n        if (!this.selectedTemplate) return ''\n        if (this.selectedTemplate.type === 'Por Odómetro') {\n          // Buscar odómetro de la patente seleccionada\n          const vehiculo = this.mantenciones.find(v => v.patente === this.selectedPatente)\n          return this.maintenance.km || (vehiculo ? vehiculo.odometro : '')\n        } else {\n          return this.maintenance.fechaUltima\n        }\n      },\n      set(value) {\n        if (!this.selectedTemplate) return\n        if (this.selectedTemplate.type === 'Por Odómetro') {\n          this.maintenance.km = value\n        } else {\n          this.maintenance.fechaUltima = value\n        }\n      }\n    }\n  },\n  methods: {\n    selectTemplate(template) {\n      if (template.used) return\n      this.selectedTemplate = template\n      this.maintenance.name = template.name\n      this.maintenance.type = template.type\n    },\n    goToNextStep() {\n      if (this.selectedTemplate) this.step = 2\n    },\n    saveMaintenance() {\n      this.selectedTemplate.used = true\n      this.$emit('save', this.maintenance)\n      this.cancel()\n    },\n    cancel() {\n      this.$emit('close')\n      this.step = 1\n      this.selectedTemplate = null\n      this.maintenance = { name: '', type: '', date: '', km: '', details: '', intervalo: '', email: '', alerta: '', fechaUltima: '' }\n    }\n  }\n}\n</script>\n\n<template>\n  <div v-if=\"showAddModal\" class=\"fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4\">\n    <div class=\"bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 rounded-lg relative flex flex-col w-full max-w-3xl h-auto p-6 border border-gray-300 dark:border-gray-700 shadow-xl\">\n      \n      <!-- Botón volver paso 2 -> 1 -->\n      <button v-if=\"step === 2\" @click=\"step = 1\" class=\"absolute top-4 left-4 p-2 rounded hover:bg-gray-200 dark:hover:bg-gray-700 transition\" title=\"Volver\">\n        <SvgIcon name=\"arrow-left\" class=\"w-6 h-6\" />\n      </button>\n\n      <h2 class=\"text-2xl font-bold mb-4 text-center text-[#102372] dark:text-[#ff6600]\">\n        {{ step === 1 ? \"Seleccionar Template\" : \"Agregar Mantención\" }}\n      </h2>\n\n      <span class=\"h-px bg-gray-300 dark:bg-gray-700 mb-4\"></span>\n\n      <!-- Paso 1 -->\n      <div v-if=\"step === 1\" class=\"flex flex-col items-center gap-4 py-4\">\n        <div class=\"flex justify-center gap-4 flex-wrap\">\n          <div v-for=\"template in templates\" :key=\"template.id\" @click=\"selectTemplate(template)\" :class=\"[\n            'relative p-6 w-48 rounded-lg border cursor-pointer text-center transition-all',\n            template.used\n              ? 'border-gray-500 bg-gray-200 dark:bg-gray-800 opacity-60 cursor-not-allowed'\n              : selectedTemplate?.id === template.id\n                ? 'border-[#ff6600] bg-orange-50 dark:bg-[#ff6600]/20 dark:border-[#ff6600]'\n                : 'border-gray-300 dark:border-gray-600 hover:bg-gray-100 dark:hover:bg-gray-800'\n          ]\">\n            <h3 class=\"text-lg font-semibold mb-2\">{{ template.name }}</h3>\n            <p class=\"text-gray-600 dark:text-gray-300 text-sm mb-2\">{{ template.description }}</p>\n            <div v-if=\"template.used\" class=\"absolute inset-0 flex items-center justify-center bg-black bg-opacity-50 text-white rounded-lg text-sm font-semibold\">\n              Este vehículo ya tiene este tipo de mantención\n            </div>\n          </div>\n        </div>\n      </div>\n\n      <!-- Paso 2 -->\n      <form v-else @submit.prevent=\"saveMaintenance\" class=\"grid grid-cols-2 gap-4 py-2 overflow-y-auto\">\n        <div>\n          <label class=\"block text-sm mb-1\">Nombre de la Mantención</label>\n          <input type=\"text\" v-model=\"maintenance.name\" disabled\n                 class=\"w-full p-2 rounded-md bg-gray-100 dark:bg-gray-800 text-gray-900 dark:text-white border border-gray-300 dark:border-gray-600\"/>\n        </div>\n\n        <div>\n          <label class=\"block text-sm mb-1\">Tipo de Mantención</label>\n          <input type=\"text\" v-model=\"maintenance.type\" disabled\n                 class=\"w-full p-2 rounded-md bg-gray-100 dark:bg-gray-800 text-gray-900 dark:text-white border border-gray-300 dark:border-gray-600\"/>\n        </div>\n\n        <div>\n          <label class=\"block text-sm mb-1\">Intervalo</label>\n          <input type=\"text\" placeholder=\"Ej: 30 días o 5000 km\" v-model=\"maintenance.intervalo\"\n                 class=\"w-full p-2 rounded-md bg-gray-100 dark:bg-gray-800 text-gray-900 dark:text-white border border-gray-300 dark:border-gray-600\"/>\n        </div>\n\n        <div>\n          <label class=\"block text-sm mb-1\">Email de contacto</label>\n          <input type=\"email\" placeholder=\"Ej: contacto@empresa.cl\" v-model=\"maintenance.email\"\n                 class=\"w-full p-2 rounded-md bg-gray-100 dark:bg-gray-800 text-gray-900 dark:text-white border border-gray-300 dark:border-gray-600\"/>\n        </div>\n\n        <div>\n          <label class=\"block text-sm mb-1\">Alerta</label>\n          <input type=\"text\" placeholder=\"Ej: 5 días antes o 200 km antes\" v-model=\"maintenance.alerta\"\n                 class=\"w-full p-2 rounded-md bg-gray-100 dark:bg-gray-800 text-gray-900 dark:text-white border border-gray-300 dark:border-gray-600\"/>\n        </div>\n\n        <div>\n          <label class=\"block text-sm mb-1\">{{ ultimoCampoLabel }}</label>\n          <input :type=\"selectedTemplate?.type === 'Por Odómetro' ? 'number' : 'date'\" v-model=\"ultimoCampoValue\"\n                 class=\"w-full p-2 rounded-md bg-gray-100 dark:bg-gray-800 text-gray-900 dark:text-white border border-gray-300 dark:border-gray-600\"/>\n        </div>\n      </form>\n\n      <!-- Botones -->\n      <div class=\"flex justify-between mt-6 gap-2\">\n        <button @click=\"cancel\" class=\"bg-gray-300 dark:bg-gray-700 hover:bg-gray-400 dark:hover:bg-gray-600 text-gray-900 dark:text-white px-4 py-2 rounded w-[48%] transition\">\n          Cancelar\n        </button>\n\n        <button v-if=\"step === 1\" @click=\"goToNextStep\" :disabled=\"!selectedTemplate\" :class=\"[\n          'px-4 py-2 rounded w-[48%] font-semibold transition',\n          selectedTemplate\n            ? 'bg-[#102372] hover:bg-[#0d1c5a] text-white'\n            : 'bg-[#102372] opacity-50 cursor-not-allowed text-white'\n        ]\">\n          Siguiente\n        </button>\n\n        <button v-else type=\"submit\" :disabled=\"isModalButtonDisabled\" :class=\"[\n          'px-4 py-2 rounded w-[48%] font-semibold transition',\n          isModalButtonDisabled\n            ? 'bg-[#102372] opacity-50 cursor-not-allowed text-white'\n            : 'bg-[#102372] hover:bg-[#0d1c5a] text-white'\n        ]\">\n          Guardar\n        </button>\n      </div>\n    </div>\n  </div>\n</template>\n"],"mappings":";;AACA,OAAOA,OAAM,MAAO,gCAA+B;AACnD,SAASC,GAAG,EAAEC,QAAO,QAAS,KAAI;AAElC,eAAe;EACbC,IAAI,EAAE,cAAc;EACpBC,UAAU,EAAE;IAAEJ;EAAQ,CAAC;EACvBK,KAAK,EAAE;IACLC,YAAY,EAAE;MAAEC,IAAI,EAAEC,OAAO;MAAEC,QAAQ,EAAE;IAAK,CAAC;IAC/CC,eAAe,EAAE;MAAEH,IAAI,EAAEI,MAAM;MAAEF,QAAQ,EAAE;IAAK,CAAC;IAAE;IACnDG,YAAY,EAAE;MAAEL,IAAI,EAAEM,KAAK;MAAEJ,QAAQ,EAAE;IAAK,CAAC,CAAE;EACjD,CAAC;EACDK,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,IAAI,EAAE,CAAC;MACPC,SAAS,EAAE,CACT;QAAEC,EAAE,EAAE,CAAC;QAAEd,IAAI,EAAE,kBAAkB;QAAEI,IAAI,EAAE,YAAY;QAAEW,WAAW,EAAE,oDAAoD;QAAEC,IAAI,EAAE;MAAM,CAAC,EACvI;QAAEF,EAAE,EAAE,CAAC;QAAEd,IAAI,EAAE,wBAAwB;QAAEI,IAAI,EAAE,YAAY;QAAEW,WAAW,EAAE,iDAAiD;QAAEC,IAAI,EAAE;MAAM,CAAC,EAC1I;QAAEF,EAAE,EAAE,CAAC;QAAEd,IAAI,EAAE,sBAAsB;QAAEI,IAAI,EAAE,cAAc;QAAEW,WAAW,EAAE,0DAA0D;QAAEC,IAAI,EAAE;MAAM,CAAC,EACnJ;QAAEF,EAAE,EAAE,CAAC;QAAEd,IAAI,EAAE,kBAAkB;QAAEI,I