{"ast":null,"code":"import \"core-js/modules/es.iterator.constructor.js\";\nimport \"core-js/modules/es.iterator.map.js\";\nexport default {\n  name: 'ModalVerMantenciones',\n  props: {\n    patente: {\n      type: String,\n      required: true\n    },\n    mantenciones: {\n      type: Array,\n      required: true\n    }\n  },\n  methods: {\n    formatFecha(fechaStr) {\n      const f = new Date(fechaStr);\n      return f.toLocaleString();\n    }\n  },\n  computed: {\n    mantencionesConEstado() {\n      return this.mantenciones.map(m => {\n        let umbral;\n        let faltante;\n        let estado;\n        if (m.tipo === 'Por Odómetro') {\n          umbral = m.ultimo + m.intervalo;\n          faltante = umbral - m.actual;\n          estado = faltante <= 0 ? 'Requiere mantención' : 'OK';\n        } else {\n          // Por Tiempo\n          const ultimaFecha = new Date(m.ultimo);\n          const intervaloDias = Number(m.intervalo) || 0;\n\n          // Sumar días directamente ignorando zona horaria\n          const umbralDate = new Date(ultimaFecha.getFullYear(), ultimaFecha.getMonth(), ultimaFecha.getDate() + intervaloDias);\n\n          // Faltante en días\n          const fechaActual = new Date();\n          const diffMs = umbralDate - fechaActual;\n          faltante = Math.ceil(diffMs / (1000 * 60 * 60 * 24));\n\n          // Estado\n          estado = faltante <= 0 ? 'Requiere mantención' : 'OK';\n\n          // Formateo para mostrar solo la fecha\n          umbral = `${umbralDate.getDate().toString().padStart(2, '0')}/${(umbralDate.getMonth() + 1).toString().padStart(2, '0')}/${umbralDate.getFullYear()}`;\n        }\n        return {\n          ...m,\n          umbral,\n          faltante,\n          estado\n        };\n      });\n    }\n  }\n};","map":{"version":3,"names":["name","props","patente","type","String","required","mantenciones","Array","methods","formatFecha","fechaStr","f","Date","toLocaleString","computed","mantencionesConEstado","map","m",