{"ast":null,"code":"import \"core-js/modules/es.iterator.constructor.js\";\nimport \"core-js/modules/es.iterator.map.js\";\nexport default {\n  name: 'ModalVerMantenciones',\n  props: {\n    patente: {\n      type: String,\n      required: true\n    },\n    mantenciones: {\n      type: Array,\n      required: true\n    }\n  },\n  methods: {\n    formatFecha(fechaStr) {\n      const f = new Date(fechaStr);\n      return f.toLocaleString();\n    }\n  },\n  computed: {\n    mantencionesConEstado() {\n      return this.mantenciones.map(m => {\n        let umbral;\n        let faltante;\n        let estado;\n        if (m.tipo === 'Por Odómetro') {\n          // Mantenciones por km\n          umbral = Number(m.ultimo) + Number(m.intervalo);\n          faltante = umbral - Number(m.actual);\n          estado = faltante <= 0 ? 'Requiere mantención' : 'OK';\n        } else {\n          // Mantenciones por tiempo\n          // Convertimos la fecha de último registro a local\n          const [yyyy, mm, dd] = m.ultimo.split('-');\n          const ultimaFecha = new Date(yyyy, mm - 1, dd); // meses 0-11\n          const intervaloDias = Number(m.intervalo) || 0;\n\n          // Sumamos días al último registro\n          const umbralDate = new Date(ultimaFecha.getFullYear(), ultimaFecha.getMonth(), ultimaFecha.getDate() + intervaloDias);\n\n          // Formateamos la fecha para la tabla\n          umbral = `${umbralDate.getDate().toString().padStart(2, '0')}/${(umbralDate.getMonth() + 1).toString().padStart(2, '0')}/${umbralDate.getFullYear()}`;\n\n          // Calculamos faltante en días\n          const fechaActual = new Date();\n          faltante = Math.ceil((umbralDate - fechaActual) / (1000 * 60 * 60 * 24));\n          estado = faltante <= 0 ? 'Requiere mantención' : 'OK';\n        }\n        return {\n          ...m,\n          umbral,\n          faltante,\n          estado\n        };\n      });\n    }\n  }\n};","map":{"version":3,"names":["name","props","patente","type","String","required","mantenciones","Array","methods","formatFecha","fechaStr","f","Date","toLocaleString","computed","mantencionesConEstado","map","m","umbral","faltante","estado","tipo","Number","ultimo","intervalo","actual","yyyy","mm","dd","split","ultimaFecha","intervaloDias","umbralDate","getFullYear","getMonth","getDate","toString","padStart","fechaActual","Math","ceil"],"sources":["/home/sebastian/quantum-fleet-core/frontend/src/components/MantencionesUi/ModalVerMantenciones.vue"],"sourcesContent":["<template>\n    <div class=\"fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4\">\n        <div\n            class=\"bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 rounded-lg relative w-full max-w-5xl h-auto p-6 border border-gray-300 dark:border-gray-700 shadow-xl overflow-auto\">\n\n            <!-- Header -->\n            <h2 class=\"text-2xl font-bold mb-4 text-center text-[#102372] dark:text-[#ff6600]\">\n                Mantenciones Vehículo {{ patente }}\n            </h2>\n\n            <button @click=\"$emit('close')\"\n                class=\"absolute top-4 right-4 p-2 rounded hover:bg-gray-200 dark:hover:bg-gray-700 transition\"\n                title=\"Cerrar\">\n                ✖\n            </button>\n\n            <!-- Tabla Mantenciones -->\n            <div class=\"overflow-x-auto\">\n                <table class=\"min-w-full text-xs sm:text-sm md:text-base text-center border-collapse\">\n                    <thead class=\"bg-[#102372] dark:bg-[#102372] sticky top-0 z-10 text-gray-100\">\n                        <tr>\n                            <th class=\"py-2 px-3 border-b border-gray-300 dark:border-gray-600\">Nombre</th>\n                            <th class=\"py-2 px-3 border-b border-gray-300 dark:border-gray-600\">Tipo</th>\n                            <th class=\"py-2 px-3 border-b border-gray-300 dark:border-gray-600\">Intervalo</th>\n                            <th class=\"py-2 px-3 border-b border-gray-300 dark:border-gray-600\">Último</th>\n                            <th class=\"py-2 px-3 border-b border-gray-300 dark:border-gray-600\">Umbral</th>\n                            <th class=\"py-2 px-3 border-b border-gray-300 dark:border-gray-600\">Actual</th>\n                            <th class=\"py-2 px-3 border-b border-gray-300 dark:border-gray-600\">Faltante</th>\n                            <th class=\"py-2 px-3 border-b border-gray-300 dark:border-gray-600\">Fecha Creación</th>\n                            <th class=\"py-2 px-3 border-b border-gray-300 dark:border-gray-600\">Estado</th>\n                            <th class=\"py-2 px-3 border-b border-gray-300 dark:border-gray-600\">Editar</th>\n                            <th class=\"py-2 px-3 border-b border-gray-300 dark:border-gray-600\">Eliminar</th>\n                        </tr>\n                    </thead>\n\n                    <tbody>\n                        <tr v-for=\"(m, idx) in mantencionesConEstado\" :key=\"idx\"\n                            class=\"hover:bg-gray-50 dark:hover:bg-gray-700 border-b dark:border-gray-600\">\n\n\n                            <td class=\"py-2 px-3\">{{ m.nombre || m.name }}</td>\n                            <td class=\"py-2 px-3\">{{ m.tipo || m.type }}</td>\n                            <td class=\"py-2 px-3\">{{ m.intervalo }}</td>\n                            <td class=\"py-2 px-3\">{{ m.ultimo }}</td>\n                            <td class=\"py-2 px-3\">{{ m.umbral }}</td>\n                            <td class=\"py-2 px-3\">{{ m.actual }}</td>\n                            <td class=\"py-2 px-3\">{{ m.faltante }}</td>\n                            <td class=\"py-2 px-3\">{{ formatFecha(m.fechaCreacion) }}</td>\n                            <td class=\"py-2 px-3\">\n                                <div class=\"flex flex-col items-center justify-center gap-1\">\n                                    <img v-if=\"m.estado === 'OK'\"\n                                        src=\"https://sinergygroup.cl/Mantenciones/img/verde.png\" class=\"w-6 h-6\" />\n                                    <img v-else-if=\"m.estado === 'Próxima mantención'\"\n                                        src=\"https://sinergygroup.cl/Mantenciones/img/amarillo.png\" class=\"w-6 h-6\" />\n                                    <img v-else-if=\"m.estado === 'Requiere mantención'\"\n                                        src=\"https://sinergygroup.cl/Mantenciones/img/rojo.png\" class=\"w-6 h-6\" />\n                                    <span class=\"text-xs\">{{ m.estado }}</span>\n                                </div>\n                            </td>\n\n\n                            <td class=\"py-2 px-3\">\n                                <button @click=\"$emit('editar', idx)\"\n                                    class=\"bg-yellow-500 hover:bg-yellow-600 text-white px-2 py-1 rounded text-xs\">\n                                    Editar\n                                </button>\n                            </td>\n\n                            <td class=\"py-2 px-3\">\n                                <button @click=\"$emit('eliminar', idx)\"\n                                    class=\"bg-red-500 hover:bg-red-600 text-white px-2 py-1 rounded text-xs\">\n                                    Eliminar\n                                </button>\n                            </td>\n\n                        </tr>\n\n                        <tr v-if=\"!mantenciones || mantenciones.length === 0\">\n                            <td colspan=\"11\" class=\"text-center py-4 text-gray-500 dark:text-gray-400\">\n                                No hay mantenciones registradas\n                            </td>\n                        </tr>\n                    </tbody>\n                </table>\n            </div>\n        </div>\n    </div>\n</template>\n\n<script>\nexport default {\n    name: 'ModalVerMantenciones',\n    props: {\n        patente: { type: String, required: true },\n        mantenciones: { type: Array, required: true }\n    },\n    methods: {\n        formatFecha(fechaStr) {\n            const f = new Date(fechaStr)\n            return f.toLocaleString()\n        }\n    },\n    computed: {\n        mantencionesConEstado() {\n            return this.mantenciones.map(m => {\n                let umbral;\n                let faltante;\n                let estado;\n\n                if (m.tipo === 'Por Odómetro') {\n                    // Mantenciones por km\n                    umbral = Number(m.ultimo) + Number(m.intervalo);\n                    faltante = umbral - Number(m.actual);\n                    estado = faltante <= 0 ? 'Requiere mantención' : 'OK';\n                } else {\n                    // Mantenciones por tiempo\n                    // Convertimos la fecha de último registro a local\n                    const [yyyy, mm, dd] = m.ultimo.split('-');\n                    const ultimaFecha = new Date(yyyy, mm - 1, dd); // meses 0-11\n                    const intervaloDias = Number(m.intervalo) || 0;\n\n                    // Sumamos días al último registro\n                    const umbralDate = new Date(\n                        ultimaFecha.getFullYear(),\n                        ultimaFecha.getMonth(),\n                        ultimaFecha.getDate() + intervaloDias\n                    );\n\n                    // Formateamos la fecha para la tabla\n                    umbral = `${umbralDate.getDate().toString().padStart(2, '0')}/${(umbralDate.getMonth() + 1).toString().padStart(2, '0')}/${umbralDate.getFullYear()}`;\n\n                    // Calculamos faltante en días\n                    const fechaActual = new Date();\n                    faltante = Math.ceil((umbralDate - fechaActual) / (1000 * 60 * 60 * 24));\n\n                    estado = faltante <= 0 ? 'Requiere mantención' : 'OK';\n                }\n\n                return { ...m, umbral, faltante, estado };\n            });\n        }\n\n    }\n\n}\n</script>\n\n<style scoped>\nbutton {\n    transition: all 0.2s ease-in-out;\n}\n</style>\n"],"mappings":";;AA0FA,eAAe;EACXA,IAAI,EAAE,sBAAsB;EAC5BC,KAAK,EAAE;IACHC,OAAO,EAAE;MAAEC,IAAI,EAAEC,MAAM;MAAEC,QAAQ,EAAE;IAAK,CAAC;IACzCC,YAAY,EAAE;MAAEH,IAAI,EAAEI,KAAK;MAAEF,QAAQ,EAAE;IAAK;EAChD,CAAC;EACDG,OAAO,EAAE;IACLC,WAAWA,CAACC,QAAQ,EAAE;MAClB,MAAMC,CAAA,GAAI,IAAIC,IAAI,CAACF,QAAQ;MAC3B,OAAOC,CAAC,CAACE,cAAc,CAAC;IAC5B;EACJ,CAAC;EACDC,QAAQ,EAAE;IACNC,qBAAqBA,CAAA,EAAG;MACpB,OAAO,IAAI,CAACT,YAAY,CAACU,GAAG,CAACC,CAAA,IAAK;QAC9B,IAAIC,MAAM;QACV,IAAIC,QAAQ;QACZ,IAAIC,MAAM;QAEV,IAAIH,CAAC,CAACI,IAAG,KAAM,cAAc,EAAE;UAC3B;UACAH,MAAK,GAAII,MAAM,CAACL,CAAC,CAACM,MAAM,IAAID,MAAM,CAACL,CAAC,CAACO,SAAS,CAAC;UAC/CL,QAAO,GAAID,MAAK,GAAII,MAAM,CAACL,CAAC,CAACQ,MAAM,CAAC;UACpCL,MAAK,GAAID,QAAO,IAAK,IAAI,qBAAoB,GAAI,IAAI;QACzD,OAAO;UACH;UACA;UACA,MAAM,CAACO,IAAI,EAAEC,EAAE,EAAEC,EAAE,IAAIX,CAAC,CAACM,MAAM,CAACM,KAAK,CAAC,GAAG,CAAC;UAC1C,MAAMC,WAAU,GAAI,IAAIlB,IAAI,CAACc,IAAI,EAAEC,EAAC,GAAI,CAAC,EAAEC,EAAE,CAAC,EAAE;UAChD,MAAMG,aAAY,GAAIT,MAAM,CAACL,CAAC,CAACO,SAAS,KAAK,CAAC;;UAE9C;UACA,MAAMQ,UAAS,GAAI,IAAIpB,IAAI,CACvBkB,WAAW,CAACG,WAAW,CAAC,CAAC,EACzBH,WAAW,CAACI,QAAQ,CAAC,CAAC,EACtBJ,WAAW,CAACK,OAAO,CAAC,IAAIJ,aAC5B,CAAC;;UAED;UACAb,MAAK,GAAI,GAAGc,UAAU,CAACG,OAAO,CAAC,CAAC,CAACC,QAAQ,CAAC,CAAC,CAACC,QAAQ,CAAC,CAAC,EAAE,GAAG,CAAC,IAAI,CAACL,UAAU,CAACE,QAAQ,CAAC,IAAI,CAAC,EAAEE,QAAQ,CAAC,CAAC,CAACC,QAAQ,CAAC,CAAC,EAAE,GAAG,CAAC,IAAIL,UAAU,CAACC,WAAW,CAAC,CAAC,EAAE;;UAErJ;UACA,MAAMK,WAAU,GAAI,IAAI1B,IAAI,CAAC,CAAC;UAC9BO,QAAO,GAAIoB,IAAI,CAACC,IAAI,CAAC,CAACR,UAAS,GAAIM,WAAW,KAAK,IAAG,GAAI,EAAC,GAAI,EAAC,GAAI,EAAE,CAAC,CAAC;UAExElB,MAAK,GAAID,QAAO,IAAK,IAAI,qBAAoB,GAAI,IAAI;QACzD;QAEA,OAAO;UAAE,GAAGF,CAAC;UAAEC,MAAM;UAAEC,QAAQ;UAAEC;QAAO,CAAC;MAC7C,CAAC,CAAC;IACN;EAEJ;AAEJ","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}